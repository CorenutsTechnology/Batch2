<beans 
	xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="com.fueiji.bean,com.fueiji.service"/>
	
	
	
	<bean id="url-patterns"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations" value="classpath:amazon.properties"></property>
		
	</bean>
	<bean id="connection" class="com.feuji.service.DbConnection2">
		<property name="url" value="${url}"/>
		<property name="username" value="${_username}"/>
		<property name="password" value="${password}" ></property>
	</bean>
</beans>