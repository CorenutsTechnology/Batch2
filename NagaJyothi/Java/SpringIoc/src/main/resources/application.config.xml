<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
               
     <context:annotation-config/>
    
    <bean id="student" class="com.spring.main.Student" scope="prototype" >
    <property name="id" value="100"></property>
    <property name="name" value="Jyothi"></property>
    <!-- <property name="address" ref="address"></property>  -->
    <!-- <constructor-arg name="id" value="100"></constructor-arg>
    <constructor-arg name="name" value="Jyothi"></constructor-arg>
    <constructor-arg name="address" ref="address"></constructor-arg> -->
    </bean>
    <bean id="student1" class="com.spring.main.Student" scope="prototype">
    <property name="id" value="101"></property>
    <property name="name" value="swathi"></property>
    <!-- <property name="address" ref="address1"></property> -->
    </bean>
   <bean id="address" class="com.spring.main.Address">
   <property name="city" value="Rentachintala"></property>
   <property name="state" value="AP"></property>
   </bean>
   <bean id="address1" class="com.spring.main.Address">
   <property name="city" value="Bangolore"></property>
   <property name="state" value="Karnataka"></property>
   </bean>
   <bean id="school" class="com.spring.main.School">
   <property name="name" value="Viveka"></property>
   <property name="student">
   <list>
   <ref bean="student"/>
   <ref bean="student1"/>
   </list>
   </property>
   
   </bean>
    

</beans>