<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>Student</servlet-name>
  	<display-name>Student</display-name>
  	<description></description>
  	<servlet-class>com.crnts.Student</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Session</servlet-name>
  	<display-name>Session</display-name>
  	<description></description>
  	<servlet-class>com.crnts.Session</servlet-class>
  	<init-param>
  	<param-name>username</param-name>
  	<param-value>Swathi</param-value>
  	</init-param>
  	<init-param>
  	<param-name>password</param-name>
  	<param-value>swathi123</param-value>
  	</init-param>
  </servlet>
  <servlet>
  	<servlet-name>StudentDetails</servlet-name>
  	<display-name>StudentDetails</display-name>
  	<description></description>
  	<servlet-class>com.crnts.StudentDetails</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ErrorServlet</servlet-name>
  	<display-name>ErrorServlet</display-name>
  	<description></description>
  	<servlet-class>com.crnts.ErrorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Student</servlet-name>
  	<url-pattern>/Student</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Session</servlet-name>
  	<url-pattern>/Session</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>StudentDetails</servlet-name>
  	<url-pattern>/StudentDetails</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ErrorServlet</servlet-name>
  	<url-pattern>/ErrorServlet</url-pattern>
  </servlet-mapping>
  
   <filter>
  	<filter-name>ValidateFilter</filter-name>
  	<description></description>
  	<filter-class>com.crnts.ValidateFilter</filter-class>
  </filter>
  
  <filter-mapping>
  	<filter-name>ValidateFilter</filter-name>
  	<url-pattern>/ValidateFilter</url-pattern>
  </filter-mapping>
  
  <context-param>
  <param-name>username</param-name>
  <param-value>Jyothi</param-value>
  </context-param>
  <context-param>
  <param-name>password</param-name>
  <param-value>jyothi123</param-value>
  </context-param>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/ErrorServlet</location>
  </error-page>
  
</web-app>
