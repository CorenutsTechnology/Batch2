package com.crnts.FuntionalInterface;

public class VerifyEvenClass implements VerifyEven {

	public static void main(String[] args) {
		VerifyEvenClass check=new VerifyEvenClass();
		check.checkIfEven(4);
	}

	@Override
	public boolean checkIfEven(int value) {
		if(value%2==0)
		return true;
		else
		  return false;
	}

}
