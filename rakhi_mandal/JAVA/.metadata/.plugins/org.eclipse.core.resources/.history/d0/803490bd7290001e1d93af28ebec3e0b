package com.crnts.solid;

public class Billing_S {

	private Billing billing;

	public Billing_S(Billing billing2) {
		// TODO Auto-generated constructor stub
	}


	public Billing getBilling() {
		return billing;
	}

	
	public double calculateTotal() {
		double price = (billing.getQuantity() * billing.getBook().price);
		return price;
	}

	public void printInvoice() {
		System.out.println(billing.getQuantity() + " x " + billing.getBook().name + " = Rs" + billing.getBook().price);
		System.out.println("Total: " + billing.getTotal());
	}

	public static void main(String[] args) {
		Billing_S billing =new Billing_S(new Billing(new Book("Java","Herbert",2017,450),2));
		billing.printInvoice();
	}
//	 Billing_S billing =new Billing_S(new Billing("Java","Herbert",2017,450),2);

}
