package asslgntment3_Loops;

public class SumAndAverage {
       int sum=0,avg=0;
       
	public static void main(String[] args) {
       
	}
	public void sum() {
		for(int index=1;index<=100;index++)
		{
			sum+=index;
		}
		System.out.println("Summation : "+sum);
		System.out.println("Average : "+sum/100);
	}

}
