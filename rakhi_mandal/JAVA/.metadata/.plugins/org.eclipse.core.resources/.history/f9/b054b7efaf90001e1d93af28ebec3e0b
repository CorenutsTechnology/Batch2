package com.crnts.solid;

public class Billing_S extends Billing {
	private Billing billing;
	public Billing getBilling() {
		return billing;
	}
    public void setBilling(Billing billing) {
		this.billing = billing;
	}

    public Billing_S(Book book, int quantity) {
		super(book, quantity);
		// TODO Auto-generated constructor stub
	}





	public void printInvoice() {
		System.out.println(billing.getQuantity() + " x " + billing.getBook().name + " = Rs" + billing.getBook().price);
		System.out.println("Total: " + billing.getTotal());
	}
	
	
//	public static void main(String[] args) {
